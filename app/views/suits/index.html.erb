<p id="notice"><%= notice %></p>

<h1>Casos</h1>
<%if @suits.count>0 %>
  <table>
    <thead>
      <tr>
        <th>Descricao</th>
        <th>Autor</th>
        <th>Advogado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @suits.each do |suit| %>
        <tr>
          <td><%= suit.descricao %></td>
          <td><%= suit.author.nome %></td>
          <td><%= suit.lawyer.nome %></td>
          <td><%= link_to 'Show', suit %></td>
          <%if author_signed_in?%>
            <td><%= link_to 'Edit', edit_suit_path(suit) %></td>
            <td><%= link_to 'Destroy', suit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<%else%>
  <h2>Você ainda não possui nenhum caso!</h2>
<% end %>

<br>

<%if author_signed_in?%>
  <%= link_to 'New Suit', new_suit_path %>
<% end %>
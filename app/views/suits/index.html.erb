<p id="notice"><%= notice %></p>

<h1>Suits</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Author</th>
      <th>Lawyer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suits.each do |suit| %>
      <tr>
        <td><%= suit.descricao %></td>
        <td><%= suit.author %></td>
        <td><%= suit.lawyer %></td>
        <td><%= link_to 'Show', suit %></td>
        <td><%= link_to 'Edit', edit_suit_path(suit) %></td>
        <td><%= link_to 'Destroy', suit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

